{
  "name": "carcattonne",
  "version": "0.0.1",
  "description": "a hexagonal game to build settlements, cities & roads",
  "main": "index.js",
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -t [ browserify-css index.css ] -e index.js -o dist/build.js",
    "serve": "http-server -o -c 1 -a localhost",
    "test": "mocha --require babel-polyfill --require babel-register ./test/*Test.js",
    "dev": "npm-run-all --parallel watchify serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/generateui/jsettlers-web.git"
  },
  "author": "",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/generateui/jsettlers-web/issues"
  },
  "homepage": "https://github.com/generateui/jsettlers-web",
  "dependencies": {
    "circular-json": "^0.5.1",
    "circular-json-es6": "^2.0.2",
    "google-protobuf": "^3.4.0",
    "three-js": "^79.0.0",
    "vue": "^2.0.1",
    "vue-directive-tooltip": "^1.4.2",
    "vue-markdown": "^2.2.4",
    "vue-popperjs": "^1.2.5"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.1.0",
    "browserify-css": "^0.14.0",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^2.0.0",
    "envify": "^3.4.1",
    "http-server": "^0.9.0",
    "mocha": "^5.0.1",
    "npm-run-all": "^2.3.0",
    "vue-router": "^3.0.1",
    "vueify": "^9.4.1",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "transform-runtime",
            "transform-async-to-generator"
          ]
        }
      ],
      "vueify",
      "browserify-css"
    ]
  },
  "browserify-css": {
    "autoInject": false,
    "minify": false,
    "rootDir": ".",
    "output": "dist/build.css"
  }
}
